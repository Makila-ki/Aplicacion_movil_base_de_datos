<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rosa_fondo"
    tools:context=".Fragment_cliente">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-48dp"
        tools:layout_editor_absoluteY="196dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/Ima_foto_CL"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Cl_para_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text=""
        android:textSize="35sp"
        android:textColor="@color/black"
        android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >
            <Button
                android:id="@+id/Agre_ima_cli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="95dp"
                android:backgroundTint="@color/rosa_light"
                android:text="Foto"
                android:drawableLeft="@drawable/baseline_add_a_photo_24"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/Elimi_ima_cli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/colorAccent"
                android:text="Borrar"
                android:drawableLeft="@drawable/baseline_no_photography_24"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>
        <TextView
            android:id="@+id/Saldo_cli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text=""
            android:textSize="35sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <Button
            android:id="@+id/Editar_cli"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:backgroundTint="@color/rosa_light"
            android:textSize="20sp"
            android:text="Editar Perfil"
            android:drawableLeft="@drawable/baseline_edit_document_24"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/Editar_app"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:backgroundTint="@color/rosa_light"
            android:textSize="20sp"
            android:text="Editar App"
            android:drawableLeft="@drawable/baseline_edit_document_24"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    <Button
        android:id="@+id/Btn_Cerrar_cli"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesion"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:width="3dp"
        android:backgroundTint="@color/colorAccent"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
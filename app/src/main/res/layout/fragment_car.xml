<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rosa_fondo"

    tools:context=".CarFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-48dp"
        tools:layout_editor_absoluteY="196dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sing Up"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
               />


            <ImageView
                android:id="@+id/Para_ima"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:scaleType="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/Urlima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:id="@+id/Agre_ima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="95dp"
                    android:backgroundTint="@color/rosa_light"
                    android:text="Foto"
                    android:drawableLeft="@drawable/baseline_add_a_photo_24"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/Elimi_ima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Borrar"
                    android:drawableLeft="@drawable/baseline_no_photography_24"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>

            <EditText
                android:id="@+id/NombrePro"
                android:layout_width="293dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/texto_bor"
                android:ems="10"
                android:hint="Nombre del Producto"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
               />

            <EditText
                android:id="@+id/TipoPro"
                android:layout_width="293dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/texto_bor"
                android:ems="10"
                android:hint="Tipo del Producto"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/MarcaPro"
                android:layout_width="293dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/texto_bor"
                android:ems="10"
                android:hint="Nombre de la Marca"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Cantidad"
                android:layout_width="293dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/texto_bor"
                android:ems="10"
                android:hint="Cantidad del producto"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.659" />

            <EditText
                android:id="@+id/PrecioPro"
                android:layout_width="293dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/texto_bor"
                android:ems="10"
                android:hint="Precio del Producto"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="293dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/texto_bor"
                android:text="Mostrar En la Aplicacion"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/IngresarPro"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:width="3dp"
                android:backgroundTint="@color/colorAccent"
                android:text="Ingresar"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>